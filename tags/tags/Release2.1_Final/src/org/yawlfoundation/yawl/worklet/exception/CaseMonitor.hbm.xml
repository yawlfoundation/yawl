<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.exception.CaseMonitor" table="Worklet_CaseMonitor">

        <id name="_caseID" column="caseID" type="string" access="field">
   		    <generator class="assigned"/>
        </id>

        <component name="_specID"
                   class="org.yawlfoundation.yawl.engine.YSpecificationID" access="field">
            <property name="identifier" column="specID"/>
            <component name="version"
                       class="org.yawlfoundation.yawl.elements.YSpecVersion">
                <property name="version" column="specVersion"/>
            </component>
            <property name="uri" column="specURI"/>
        </component>

        <property name="_caseDataStr"   column="caseDataStr"   type="text"/>
        <property name="_netDataStr"    column="netDataStr"    type="text"/>
        <property name="_liveCase"      column="liveCase"      type="boolean"/>
        <property name="_hrPreCaseID"   column="hrPreCaseID"/>
        <property name="_hrPostCaseID"  column="hrPostCaseID"/>
        <property name="_hrCaseExID"    column="hrCaseExID"/>
        <property name="_liveItemIDs"   column="liveItemIDs"   type="text"/>
        <property name="_itemRunnerIDs" column="itemRunnerIDs" type="text"/>
    </class>
	
</hibernate-mapping>