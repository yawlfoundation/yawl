<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
    version="2.4">

 <!-- no need for JSTL .tld declarations here -->
 
    <display-name>PDF</display-name>
    <description>
      PDF
    </description>

<!--	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
-->

    <context-param>
        <param-name>InterfaceB_BackEnd</param-name>
        <param-value>http://localhost:8080/yawl/ib</param-value>
        <description>
            The URL location of the REST-ful interface B.
        </description>
    </context-param>

    <context-param>
        <param-name>InterfaceBWebSideController</param-name>
        <param-value>au.edu.qut.yawl.PDFforms.PDFserver</param-value>
        <description>

        </description>
    </context-param>

    <context-param>
        <param-name>InterfaceA_BackEnd</param-name>
        <param-value>http://localhost:8080/yawl/ia</param-value>
        <description>
            The URL location of the REST-ful interface A.
        </description>
    </context-param>

	<servlet>
	  <servlet-name>PDFforms</servlet-name>
	  <servlet-class>au.edu.qut.yawl.PDFforms.PDFGenerator</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
	  <servlet-name>PDFforms</servlet-name>
	  <url-pattern>/generate</url-pattern>
	</servlet-mapping>

	<servlet>
	  <servlet-name>interfaceD</servlet-name>
	  <servlet-class>au.edu.qut.yawl.engine.interfce.interfaceD_WorkItemExecution.InterfaceD_Server</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
	  <servlet-name>interfaceD</servlet-name>
	  <url-pattern>/interfaceD</url-pattern>
	</servlet-mapping>

	<servlet>
	  <servlet-name>Verify</servlet-name>
	  <servlet-class>au.edu.qut.yawl.PDFforms.signature.Verifier</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
	  <servlet-name>Verify</servlet-name>
	  <url-pattern>/verify</url-pattern>
	</servlet-mapping>




</web-app>