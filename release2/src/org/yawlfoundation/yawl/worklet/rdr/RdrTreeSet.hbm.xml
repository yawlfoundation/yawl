<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.rdr.RdrTreeSet" table="RdrTreeSet">

	    <id name="id" column="rdrtreesetid" type="long" access="field">
    		<generator class="native"/>
    	</id>

        <set name="treeSet" cascade="all" lazy="false">
            <key column="rdrtreesetid"/>
            <one-to-many class="org.yawlfoundation.yawl.worklet.rdr.RdrTree"/>
        </set>

        <property name="_ruleType" column="ruletype" access="field">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.yawlfoundation.yawl.worklet.rdr.RuleType</param>
            </type>
        </property>

	</class>
	
</hibernate-mapping>
