<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.engine.YNetRunner" table="RUNNER_STATES">

       <id name="_caseID" column="case_id" type="string" access="field">
   		<generator class="assigned"/>
    	</id>
		
        <many-to-one name="_standin_caseIDForNet" class="org.yawlfoundation.yawl.engine.P_YIdentifier" column="identifier" cascade="all"/>

        <many-to-one name="casedata" class="org.yawlfoundation.yawl.engine.YCaseData" column="casedata" cascade="all"/>

    	  <property name="yNetID" column="net_id" type="string" access="field"/>
        <property name="_yNetVersion" column="net_version" type="string"/>

    	  <property name="containingTaskID" column="containing_task_id" access="field"/>


        <property name="_caseObserverStr" column="caseObserver"/>
        <property name="_exceptionObserverStr" column="exceptionObserver"/>


        <set name="enabledTaskNames" table="RUNNER_ENABLED_TASKS" access="field">
    		<key column="runner_id"/>
	    	<element column="task" type="string"/>
	    </set>
    	<set name="busyTaskNames" table="RUNNER_BUSY_TASKS" access="field">
    		<key column="runner_id"/>
	    	<element column="task" type="string"/>
	    </set>

     </class>
	
</hibernate-mapping>
