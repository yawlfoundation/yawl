<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>CostService</display-name>
    <description>
        The YAWL Cost Service calculates and logs the costs associated with process executions
    </description>


    <!--CharsetFilter -->

     <filter>
       <filter-name>CharsetFilter</filter-name>
       <filter-class>org.yawlfoundation.yawl.util.CharsetFilter</filter-class>
         <init-param>
           <param-name>requestEncoding</param-name>
           <param-value>UTF-8</param-value>
         </init-param>
     </filter>

     <filter-mapping>
       <filter-name>CharsetFilter</filter-name>
       <url-pattern>/*</url-pattern>
     </filter-mapping>


    <servlet>
        <servlet-name>costService</servlet-name>
        <servlet-class>
            org.yawlfoundation.yawl.cost.CostGateway
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>costService</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
