<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.elements.state.YIdentifier" table="YIdentifiers" lazy="false">

	    <id name="_idString" column="idString" type="string">
    		<generator class="assigned"/>
    	</id>
   	
      <list name="_children" lazy="false">
    		<key column="parent"/>
    		<index column="ix"/>
	    	<one-to-many class="org.yawlfoundation.yawl.elements.state.YIdentifier"/>
	    </list>

	    <list name="locationNames" table="YLOCATIONS" access="field" lazy="false">
	      <key column="id_key"/>
	      <index column="ix"/>
	      <element column="loc_condition" type="string"/>
	    </list>

	</class>
	
</hibernate-mapping>
