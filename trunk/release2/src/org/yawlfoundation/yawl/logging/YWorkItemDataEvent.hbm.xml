<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="org.yawlfoundation.yawl.logging">

	<class name="YWorkItemDataEvent" table="log_WorkItemData">

        <id name="_rowkey" column="rowkey" type="string"/>

        <property name="_childWorkItemEventID" column="ChildWorkItemEventID"/>
        <property name="_param"                column="ParamName"/>
        <property name="_value"                column="ParamValue"      type="text"/>
        <property name="_io"                   column="ParamType"       type="character"/>

	</class>
	
</hibernate-mapping>