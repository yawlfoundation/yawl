<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.resourcing.resource.nonhuman">

	<class name="NonHumanResource" table="rs_NonHumanResource" lazy="false">

        <id name="_resourceID"
            column="ResourceID"
            type="string"
            access="field"/>

        <property name="_name"
                  column="ResourceName"
                  type="string"
                  access="field"/>

    	<property name="_description"
                  column="Description"
                  type="text"
                  access="field"/>

        <property name="_notes"
                  column="Notes"
                  type="text"
                  access="field"/>

        <property name="_isAvailable"
                  column="Available"
                  type="boolean"
                  access="field"/>

        <property name="_blockedDuration"
                  column="BlockedDuration"
                  type="long"
                  access="field"/>

        <property name="_blockType"
                  column="BlockedType"
                  type="string"/>

        <many-to-one name="_category"
                  column="CategoryID"
                  class="NonHumanCategory"
                  access="field"
                  cascade="save-update"/>

     </class> 
	
</hibernate-mapping>