<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.resourcing.calendar.utilisation">

	<class name="UtilisationLogEntry" table="rs_UtilLog">

        <id name="entryID" type="long">
            <generator class="native"/>
        </id>

        <property name="phase"/>  
        <property name="caseID"/>
        <property name="activityID"/>
    	<property name="resourceID"/>
        <property name="agent"/>  
        <property name="workload"    type="int"/>
        <property name="timestamp"   column="entryTime" type="long"/>
        <property name="status"      column="entryStatus"/>
        <property name="calendarKey" type="long"/>
	</class>

</hibernate-mapping>