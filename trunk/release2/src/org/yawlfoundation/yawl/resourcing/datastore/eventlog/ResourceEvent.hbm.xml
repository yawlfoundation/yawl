<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.resourcing.datastore.eventlog">

	<class name="ResourceEvent" table="rs_EventLog">

        <id name="_id"
            column="rowid"
            type="long">
            <generator class="native"/>
        </id>

        <component name="_specID"
                   class="org.yawlfoundation.yawl.engine.YSpecificationID" access="field">
            <property name="identifier" column="specID"/>
            <component name="version"
                       class="org.yawlfoundation.yawl.elements.YSpecVersion">
                <property name="version" column="specVersion"/>
            </component>
            <property name="uri" column="specURI"/>
        </component>

        <property name="_caseID" column="caseID"/>
        <property name="_taskID" column="taskID"/>
        <property name="_itemID" column="itemID"/>
        <property name="_participantID" column="participantID" length="40"/>
        <property name="_event" column="event" length="15"/>
        <property name="_timeStamp" column="eventTime" type="long"/>       
     </class>
	
</hibernate-mapping>
