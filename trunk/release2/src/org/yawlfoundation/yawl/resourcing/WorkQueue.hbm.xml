<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.resourcing">

	<class name="WorkQueue" table="rs_WorkQueue" select-before-update="true">

        <id name="_id"
            column="id"
            type="long">
            <generator class="native"/>
        </id>

        <property name="_ownerID"
                  column="ownerID"
                  type="string"/>

    	<property name="_queueType"
                  column="queueType"
                  type="int"/>

        <set name="_itemIDs" table="rs_queueItems">
            <key column="id"/>
            <element column="itemid" type="string"/>
        </set>

     </class>
	
</hibernate-mapping>
