<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.rdr.RdrSet" table="RdrSet">

	    <id name="id" type="long" access="field">
    		<generator class="assigned"/>
    	</id>

        <component name="_specID"
                   class="org.yawlfoundation.yawl.engine.YSpecificationID" access="field">
            <property name="identifier" column="specID"/>
            <component name="version"
                       class="org.yawlfoundation.yawl.elements.YSpecVersion">
                <property name="version" column="specVersion"/>
            </component>
            <property name="uri" column="specURI"/>
        </component>

        <property name="_processName" access="field"/>

        <many-to-one name="_specPreTree" class="RdrTree" not-null="false" access="field"/>
        <many-to-one name="_specPostTree" class="RdrTree" not-null="false" access="field"/>
        <many-to-one name="_specExternalTree" class="RdrTree" not-null="false" access="field"/>

        <map name="_selectionTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_preTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_postTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_abortTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_timeoutTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_resourceTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_violationTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

        <map name="_externalTrees" access="field">
            <key column="id"/>
            <map-key column="taskid" type="string"/>
            <one-to-many class="RdrTree"/>
        </map>

	</class>
	
</hibernate-mapping>
