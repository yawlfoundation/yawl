<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.logging.table">

	<class name="YAuditEvent" table="AuditLog">

        <id name="_id"
            column="rowid"
            type="long">
            <generator class="native"/>
        </id>

        <property name="_username" column="userName"/>
        <property name="_event" column="eventType"/>
        <property name="_timeStamp" column="eventTime" type="long"/>       
     </class>
	
</hibernate-mapping>
