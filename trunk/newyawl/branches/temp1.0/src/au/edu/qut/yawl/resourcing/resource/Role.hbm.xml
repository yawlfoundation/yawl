<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="au.edu.qut.yawl.resourcing.resource">

	<class name="Role" table="rs_Role">

        <id name="_id"
            column="RoleID"
            type="string"
            access="field"/>

        <property name="_role"
                  column="Role"
                  type="string"
                  access="field"/>

        <property name="_description"
                  column="Description"
                  type="text"
                  access="field"/>

        <many-to-one name="_belongsTo"
                     column="BelongsTo"
                     class="Role"
                     access="field" />

        <set name="_resources" table="rs_Participant_Role" inverse="true">
            <key column="RoleID"/>
            <many-to-many class="Participant" column="ParticipantID"/>
        </set>

     </class>
	
</hibernate-mapping>