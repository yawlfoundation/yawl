<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>
	 
	<display-name>Web Application</display-name>
	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<context-param>
		<param-name>admintool</param-name>
		<param-value>http://131.181.70.9:8080/admintool</param-value>
		<description>The name of the admin tool web application.</description>
	</context-param>

	<context-param>
		<param-name>EnablePersistance</param-name>
		<param-value>true</param-value>
		<description>
			Set this value to 'true' to enable persistance and logging
			set to 'false' to disable
               </description>
	</context-param>

	<servlet>
	  <servlet-name>editResourceAction</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.EditResourceAction</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
	  <servlet-name>editRoleAction</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.EditRoleAction</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
	  <servlet-name>makeXML</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.makeXML</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
	  <servlet-name>auditPage</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.auditPage</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
	  <servlet-name>createChart</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.createChart</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
	  <servlet-name>Spec</servlet-name>
	  <description>
            Allows users to upload/unload YAWL specifications.
        </description>
	  <jsp-file>/spec.jsp</jsp-file>
	  <load-on-startup>2</load-on-startup>
	</servlet>
		
	<servlet>
	  <servlet-name>YAWLService</servlet-name>
	  <description>
            Allows users to upload Services.
        </description>
	  <jsp-file>/YAWLservice.jsp</jsp-file>
	  <load-on-startup>2</load-on-startup>
	</servlet>
		
	<servlet>
	  <servlet-name>Specification</servlet-name>
	  <description>
            Allows users to upload YAWL.
        </description>
	  <jsp-file>/specification.jsp</jsp-file>
	  <load-on-startup>2</load-on-startup>
	</servlet>
		
	<servlet>
        <servlet-name>Editpos</servlet-name>
        <description>
            Allows users to edit positions
        </description>
        <jsp-file>/editpos.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>3rdparty</servlet-name>
        <description>
            Allows users to upload services and connect to the process mining tool.
        </description>
        <jsp-file>/3rdparty.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>Editres</servlet-name>
        <description>
            Allows users to edit resources
        </description>
        <jsp-file>/editres.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
     <servlet>
        <servlet-name>Editsub</servlet-name>
        <description>
            Allows users to edit substitutions
        </description>
        <jsp-file>/editsub.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>Editgroup</servlet-name>
        <description>
            Allows users to edit groups
        </description>
        <jsp-file>/editgroup.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>Audit</servlet-name>
        <description>
            Allows users to view audit trail tables
        </description>
        <jsp-file>/audit.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>
		
	<servlet>
        <servlet-name>Overview</servlet-name>
        <description>
            Allows users to view monitoring information
        </description>
        <jsp-file>/overview.jsp</jsp-file>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>PersistBroken</servlet-name>
        <jsp-file>/jspLibrary/_PersistBroken.jsp</jsp-file>
    </servlet>

	<servlet-mapping>
	  <servlet-name>editResourceAction</servlet-name>
	  <url-pattern>/editResourceAction</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
	  <servlet-name>editRoleAction</servlet-name>
	  <url-pattern>/editRoleAction</url-pattern>
	</servlet-mapping>
		
	<servlet-mapping>
	  <servlet-name>makeXML</servlet-name>
	  <url-pattern>/makeXML</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	  <servlet-name>auditPage</servlet-name>
	  <url-pattern>/auditPage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	  <servlet-name>createChart</servlet-name>
	  <url-pattern>/createChart</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	  <servlet-name>Spec</servlet-name>
	  <url-pattern>/spec</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	  <servlet-name>Specification</servlet-name>
	  <url-pattern>/specification</url-pattern>
	</servlet-mapping>
	
	 <servlet-mapping>
        <servlet-name>Editpos</servlet-name>
        <url-pattern>/editpos</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Editres</servlet-name>
        <url-pattern>/editres</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Editsub</servlet-name>
        <url-pattern>/editsub</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Editgroup</servlet-name>
        <url-pattern>/editgroup</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Audit</servlet-name>
        <url-pattern>/audit</url-pattern>
    </servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>YAWLService</servlet-name>
        <url-pattern>/YAWLservice</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>3rdparty</servlet-name>
        <url-pattern>/3rdparty</url-pattern>
    </servlet-mapping>
	
	 <servlet-mapping>
        <servlet-name>Overview</servlet-name>
        <url-pattern>/overview</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PersistBroken</servlet-name>
        <url-pattern>/persistBroken</url-pattern>
    </servlet-mapping>

</web-app>
