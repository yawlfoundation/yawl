<beans>
	<bean id="yawlClientConfiguration"
		class="com.nexusbpm.services.YawlClientConfigurationBean">
		<property name="jmsUri" value=""/>
		<property name="quartzUri" value=""/>
		<property name="serverUri" value="http://localhost:8080/yawl"/>
	</bean>
	<bean id="yawlClientConfigurationFactory" 
	class="com.nexusbpm.services.SpringYawlClientConfigurationFactory">
	<property name="configuration" ref="yawlClientConfiguration"/>
	</bean>
