<shortcut
name="Start Database"
target="$INSTALL_PATH\CPAU.exe"
commandLine="-u postgres -p postgresyawl -ex &quot;c:\postgres\bin\pg_ctl start -D c:\postgres\data\yawldatabase&quot; -lwp"
description="Start Database"
iconFile="$INSTALL_PATH\graphics\db.ico"
iconIndex="0"
initialState="normal"
programGroup="yes"
desktop="no"
applications="no"
startMenu="no"
startup="no">
<createForPack name="PostgreSQL Database"/>
</shortcut>

<shortcut
name="Stop Database"
target="$INSTALL_PATH\CPAU.exe"
commandLine="-u postgres -p postgresyawl -ex &quot;c:\postgres\bin\pg_ctl stop -D c:\postgres\data\yawldatabase&quot; -lwp"
description="Stop Database"
iconFile="$INSTALL_PATH\graphics\dbstop.ico"
iconIndex="0"
initialState="normal"
programGroup="yes"
desktop="no"
applications="no"
startMenu="no"
startup="no">
<createForPack name="PostgreSQL Database"/>
</shortcut>


