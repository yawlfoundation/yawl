<shortcuts>

<skipIfNotSupported/>
<programGroup defaultName="YAWL Software"
location="startMenu"/>

<shortcut
name="Start YAWL Service"
target="net"
commandLine="start tomcat5"
description="This starts YAWL"
iconFile="$INSTALL_PATH\graphics\yawl.ico"
iconIndex="0"
initialState="normal"
programGroup="yes"
desktop="no"
applications="no"
startMenu="no"
startup="no">
</shortcut>

<shortcut
name="Stop YAWL Service"
target="net"
commandLine="stop tomcat5"
description="This stops YAWL"
iconFile="$INSTALL_PATH\graphics\yawlstop.ico"
iconIndex="0"
initialState="normal"
programGroup="yes"
desktop="no"
applications="no"
startMenu="no"
startup="no">
</shortcut>

