<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>
	 
	<display-name>Web Application</display-name>
	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<context-param>
		<param-name>admintool</param-name>
		<param-value>http://localhost:8080/admintool</param-value>
		<description>The name of the admin tool web application.</description>
	</context-param>

	<context-param>
		<param-name>EnablePersistence</param-name>
		<param-value>true</param-value>
		<description>
			Set this value to 'true' to enable persistance and logging
			set to 'false' to disable
               </description>
	</context-param>

	<servlet>
	  <servlet-name>editResourceAction</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.EditResourceAction</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
	  <servlet-name>editRoleAction</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.EditRoleAction</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	
	
	<servlet>
	  <servlet-name>createChart</servlet-name>
	  <servlet-class>au.edu.qut.yawl.admintool.createChart</servlet-class>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	

	<servlet-mapping>
	  <servlet-name>editResourceAction</servlet-name>
	  <url-pattern>/editResourceAction</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
	  <servlet-name>editRoleAction</servlet-name>
	  <url-pattern>/editRoleAction</url-pattern>
	</servlet-mapping>
		


	<servlet-mapping>
	  <servlet-name>createChart</servlet-name>
	  <url-pattern>/createChart</url-pattern>
	</servlet-mapping>
	

</web-app>
