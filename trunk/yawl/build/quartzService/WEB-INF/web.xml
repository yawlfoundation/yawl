<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>
		Auxiliary Scheduling Services
	</display-name>
	<description>Embedded Quartz server</description>
	<servlet>
		<servlet-name>quartzService</servlet-name>
		<servlet-class>com.nexusbpm.scheduler.SchedulerService</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>quartzService</servlet-name>
		<url-pattern>/scheduler</url-pattern>
	</servlet-mapping>
</web-app>
