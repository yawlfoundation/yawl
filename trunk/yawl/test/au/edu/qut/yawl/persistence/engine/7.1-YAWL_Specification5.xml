<?xml version="1.0" encoding="UTF-8"?>
<specificationSet xmlns="http://www.citi.qut.edu.au/yawl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="Beta 7.1" xsi:schemaLocation="http://www.citi.qut.edu.au/yawl d:/yawl/schema/YAWL_SchemaBeta7.1.xsd">
  <specification uri="YAWL_Specification5.xml">
    <name>Invoke Web Service</name>
    <documentation>Calls the Barnes and Nobel book price web service to retrieve the price of a book.  Takes the book's ISBN as input.</documentation>
    <metaData />
    <xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" />
    <decomposition id="Decompose" isRootNet="true" xsi:type="NetFactsType">
      <localVariable>
        <name>isbn</name>
        <type>string</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
      </localVariable>
      <localVariable>
        <name>isbn-fallback</name>
        <type>string</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
        <initialValue>0-201-61641-6</initialValue>
      </localVariable>
      <localVariable>
        <name>return</name>
        <type>float</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
      </localVariable>
      <processControlElements>
        <inputCondition id="i">
          <name>i</name>
          <flowsInto>
            <nextElementRef id="p" />
          </flowsInto>
        </inputCondition>
        <task id="p">
          <flowsInto>
            <nextElementRef id="q" />
          </flowsInto>
          <join code="xor" />
          <split code="and" />
          <completedMappings>
            <mapping>
              <expression query="/data/isbn" />
              <mapsTo>isbn</mapsTo>
            </mapping>
          </completedMappings>
          <decomposesTo id="Get ISBN" />
        </task>
        <task id="q">
          <flowsInto>
            <nextElementRef id="r" />
          </flowsInto>
          <join code="xor" />
          <split code="and" />
          <startingMappings>
            <mapping>
              <expression query="&lt;isbn&gt;{if(/data/isbn/text()) then /data/isbn/text() else (/data/isbn-fallback/text())}&lt;/isbn&gt;" />
              <mapsTo>isbn</mapsTo>
            </mapping>
          </startingMappings>
          <completedMappings>
            <mapping>
              <expression query="/data/return" />
              <mapsTo>return</mapsTo>
            </mapping>
          </completedMappings>
          <decomposesTo id="Get Price via WS" />
        </task>
        <task id="r">
          <flowsInto>
            <nextElementRef id="o" />
          </flowsInto>
          <join code="xor" />
          <split code="and" />
          <startingMappings>
            <mapping>
              <expression query="/data/return" />
              <mapsTo>return</mapsTo>
            </mapping>
          </startingMappings>
          <decomposesTo id="Display Book Price" />
        </task>
        <outputCondition id="o">
          <name>o</name>
        </outputCondition>
      </processControlElements>
    </decomposition>
    <decomposition id="Get ISBN" xsi:type="WebServiceGatewayFactsType">
      <outputExpression query="/data/isbn" />
      <outputParam>
        <name>isbn</name>
        <type>string</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
        <mandatory />
      </outputParam>
    </decomposition>
    <decomposition id="Get Price via WS" xsi:type="WebServiceGatewayFactsType">
      <inputParam name="isbn">
        <name>isbn</name>
        <type>string</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
      </inputParam>
      <outputExpression query="/data/return" />
      <outputParam>
        <name>return</name>
        <type>float</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
        <mandatory />
      </outputParam>
      <yawlService id="http://localhost:8080/yawlWSInvoker/" />
    </decomposition>
    <decomposition id="Display Book Price" xsi:type="WebServiceGatewayFactsType">
      <inputParam name="return">
        <name>return</name>
        <type>string</type>
        <namespace>http://www.w3.org/2001/XMLSchema</namespace>
      </inputParam>
    </decomposition>
  </specification>
</specificationSet>

