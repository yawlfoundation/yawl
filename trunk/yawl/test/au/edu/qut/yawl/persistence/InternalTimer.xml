<?xml version="1.0" encoding="UTF-8"?>
<specificationSet xmlns="http://www.yawl.fit.qut.edu.au/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.yawl.fit.qut.edu.au/ d:/yawl/schema/YAWL_Schema.xsd">
	<specification uri="InternalTimer.xml">
		<name>Invoke TimeService</name>
		<documentation> Example calling of the Time Service </documentation>
		<metaData/>
		<rootNet id="Decompose">
			<localVariable name="time-fallback">
				<type>xs:string</type>
				<initialValue>10000</initialValue>
			</localVariable>
			<localVariable name="time">
				<type>xs:string</type>
			</localVariable>

			<processControlElements>
				<inputCondition id="i">
					<name>i</name>
					<flowsInto>
						<nextElementRef id="a"/>
					</flowsInto>
				</inputCondition>
				<task id="a">
					<flowsInto>
						<nextElementRef id="o"/>
					</flowsInto>
					<join code="xor"/>
					<split code="and"/>
					<startingMappings>
						<mapping>
							<expression query="&lt;time&gt; {if ( /data/time/text() ) then /data/time/text() else /data/time-fallback/text() }&lt;/time&gt;"/>
							<mapsTo>time</mapsTo>
						</mapping>
					</startingMappings>
					<decomposesTo id="GetTime"/>
				</task>

				<outputCondition id="o">
					<name>o</name>
				</outputCondition>
			</processControlElements>
		</rootNet>


		<decomposition id="GetTime" xsi:type="WebServiceGatewayFactsType">
			<inputParam name="time">
				<type>xs:string</type>
				<initialValue>10000</initialValue>
			</inputParam>
			<yawlService id="internal://au.edu.qut.yawl.deployment.InternalTestService">
			</yawlService>
		</decomposition>

	</specification>
</specificationSet>
