<?xml version="1.0" encoding="UTF-8"?>
<specificationSet xmlns="http://www.yawl.fit.qut.edu.au/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.yawl.fit.qut.edu.au/ d:/yawl/schema/YAWL_Schema.xsd">
	<specification uri="YAWL_Specification5.xml">
		<name>Invoke Web Service</name>
		<documentation>Calls the Barnes and Nobel book price web service to retrieve the price of a book.  Takes the book's ISBN as input.</documentation>
		<metaData/>
		<rootNet id="Decompose">
			<localVariable name="isbn">
				<type>xs:string</type>
			</localVariable>
			<localVariable name="isbn-fallback">
				<type>xs:string</type>
				<initialValue>0-201-61641-6</initialValue>
			</localVariable>
			<localVariable name="return">
				<type>xs:float</type>
			</localVariable>
			<processControlElements>
				<inputCondition id="i">
					<name>i</name>
					<flowsInto>
						<nextElementRef id="p"/>
					</flowsInto>
				</inputCondition>
				<task id="p">
					<flowsInto>
						<nextElementRef id="q"/>
					</flowsInto>
					<join code="xor"/>
					<split code="and"/>
					<completedMappings>
						<mapping>
							<expression query="/data/isbn"/>
							<mapsTo>isbn</mapsTo>
						</mapping>
					</completedMappings>
					<decomposesTo id="Get ISBN"/>
				</task>
				<task id="q">
					<flowsInto>
						<nextElementRef id="r"/>
					</flowsInto>
					<join code="xor"/>
					<split code="and"/>
					<removesTokens id="q"/>
					<decomposesTo id="Get Price via WS"/>
				</task>
				<task id="r">
					<flowsInto>
						<nextElementRef id="o"/>
					</flowsInto>
					<join code="xor"/>
					<split code="and"/>
					<startingMappings>
						<mapping>
							<expression query="/data/return"/>
							<mapsTo>return</mapsTo>
						</mapping>
					</startingMappings>
					<decomposesTo id="Display Book Price"/>
				</task>
				<outputCondition id="o">
					<name>o</name>
				</outputCondition>
			</processControlElements>
		</rootNet>
		<decomposition id="Get ISBN" xsi:type="WebServiceGatewayFactsType">
			<outputExpression query="/data/isbn"/>
			<outputParam name="isbn">
				<type>xs:string</type>
				<mandatory/>
			</outputParam>
		</decomposition>
		<decomposition id="Get Price via WS" xsi:type="WebServiceGatewayFactsType">
		</decomposition>
		<decomposition id="Display Book Price" xsi:type="WebServiceGatewayFactsType">
			<inputParam name="return">
				<type>xs:string</type>
			</inputParam>
		</decomposition>
	</specification>
</specificationSet>
