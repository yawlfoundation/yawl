<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yawlfoundation.yawl.resourcing.resource">

	<class name="Capability" table="rs_Capability">

        <id name="_id"
            column="CapabilityID"
            type="string"
            access="field"/>

        <property name="_capability"
                  column="Capability"
                  type="string"
                  access="field"/>

        <property name="_description"
                  column="Description"
                  type="text"
                  access="field"/>

        <set name="_resources" table="rs_Participant_Capability" inverse="true">
            <key column="CapabilityID"/>
            <many-to-many class="Participant" column="ParticipantID"/>
        </set>

    </class>
	
</hibernate-mapping>