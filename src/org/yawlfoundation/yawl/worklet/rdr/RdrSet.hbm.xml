<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.rdr.RdrSet" table="RdrSet">

	    <id name="id" column="rdrsetid" type="long" access="field">
    		<generator class="native"/>
    	</id>

        <component name="_specID"
                   class="org.yawlfoundation.yawl.engine.YSpecificationID" access="field">
            <property name="identifier" column="specID"/>
            <component name="version"
                       class="org.yawlfoundation.yawl.elements.YSpecVersion">
                <property name="version" column="specVersion"/>
            </component>
            <property name="uri" column="specURI"/>
        </component>

        <property name="_processName" column="processname" access="field"/>

        <set name="ruleSet" cascade="all-delete-orphan" lazy="false">
            <key column="rdrsetid"/>
            <one-to-many class="org.yawlfoundation.yawl.worklet.rdr.RdrTreeSet"/>
        </set>

	</class>
	
</hibernate-mapping>
