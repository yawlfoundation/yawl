<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.rdr.RdrNode" table="RdrNode" lazy="false">

	    <id name="id" column="rdrnodeid" type="long" access="field">
    		<generator class="native"/>
    	</id>

        <many-to-one name="parent" cascade="all"
                     class="org.yawlfoundation.yawl.worklet.rdr.RdrNode"
                     not-null="false"/>
        <many-to-one name="trueChild" cascade="all"
                     class="org.yawlfoundation.yawl.worklet.rdr.RdrNode"
                     not-null="false"/>
        <many-to-one name="falseChild" cascade="all"
                     class="org.yawlfoundation.yawl.worklet.rdr.RdrNode"
                     not-null="false"/>
        <many-to-one name="conclusion" cascade="all"
                     class="org.yawlfoundation.yawl.worklet.rdr.RdrConclusion"/>

        <property name="condition"/>
        <property name="description" type="text"/>
        <property name="cornerstoneString" type="text"/>

	</class>
	
</hibernate-mapping>
