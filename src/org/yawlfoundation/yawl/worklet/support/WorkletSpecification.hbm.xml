<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.support.WorkletSpecification"
           table="ws_workletSpec">

        <id name="key" column="specKey">
   		    <generator class="assigned"/>
        </id>

        <component name="specID"
                   class="org.yawlfoundation.yawl.engine.YSpecificationID">
            <property name="identifier" column="specID"/>
            <component name="version"
                       class="org.yawlfoundation.yawl.elements.YSpecVersion">
                <property name="version" column="specVersion"/>
            </component>
            <property name="uri" column="specURI"/>
        </component>

       <property name="XML"  type="text"/>

    </class>
	
</hibernate-mapping>